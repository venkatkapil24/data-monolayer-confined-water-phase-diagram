<simulation verbosity='medium'>
  <output prefix='simulation'>
    <properties stride='1' filename='out'>  [ step, time{picosecond}, conserved, temperature{kelvin}, potential, volume ] </properties>
    <trajectory filename='pos' stride='1'> positions </trajectory>
    <!--trajectory filename='committee_pot' stride='1' extra_type='committee_pot'> extras </trajectory>
    <trajectory filename='committee_force' stride='1' extra_type='committee_force'> extras </trajectory> 
    <trajectory filename='committee_virial' stride='1' extra_type='committee_virial'> extras </trajectory> 
    <trajectory filename='committee_sigma' stride='1' extra_type='committee_uncertainty'> extras </trajectory-->
    <checkpoint stride='100'/>
  </output>
  <total_steps>10</total_steps>
  <prng>
    <seed>31415</seed>
  </prng>
  <!--ffcommittee name="committee">
    <alpha> 1.0 </alpha>
    <active_output> active </active_output>
    <active_thresh units="electronvolt"> 1.3 </active_thresh-->
    <ffsocket name='driver-1' mode='unix' matching="any">
      <address>localhost_1</address> <latency> 2e-4 </latency>
    </ffsocket>
    <ffsocket name='driver-2' mode='unix' matching="any">
      <address>localhost_2</address> <latency> 2e-4 </latency>
    </ffsocket>
    <ffsocket name='driver-3' mode='unix' matching="any">
      <address>localhost_3</address> <latency> 2e-4 </latency>
    </ffsocket>
  <!--/ffcommittee-->
  <system>
    <initialize nbeads='1'>
      <file mode='pdb'> init.pdb </file>
      <velocities mode='thermal' units='kelvin'> 30 </velocities>
    </initialize>
    <forces>
      <!--force forcefield='committee'> </force-->
      <force forcefield='driver-1' weight='0.33'> </force>
      <force forcefield='driver-2' weight='0.33'> </force>
      <force forcefield='driver-3' weight='0.33'> </force>
    </forces>
    <motion mode='dynamics'>
      <dynamics mode='npt'>
        <barostat mode='isotropic'>
          <tau units='femtosecond'> 2000 </tau>
          <thermostat mode='langevin'>
            <tau units='femtosecond'> 1000</tau>
          </thermostat>
        </barostat>
        <timestep units='femtosecond'> 1.0 </timestep>
        <thermostat mode='langevin'>
          <tau units='femtosecond'> 1000 </tau>
        </thermostat>
      </dynamics>
    </motion>
    <ensemble>
      <temperature units='kelvin'> 30 </temperature>
       <pressure units='megapascal'> 10 </pressure>          
    </ensemble>
  </system>
</simulation>
